<script id="probe" type="text/x-handlebars-template">
    
    <div class='probe container'>
        <div class='probequestion container'>
            <h3 class='question'>{{question_text}}</h3>
            <ol class='answerlist'>
            </ol>
            <button class='btn btn-large btn-success answerbtn'>Submit Answer</button>
        </div>
        <div class='proberesponse container'>
        </div> 
    </div>
</script>

<script id="probe_answer" type="text/x-handlebars-template">
    <li class='answer'><a>{{text}}</a></li>
</script>


<script id="probe_edit" type="text/x-handlebars-template">
    
<div class='probeedit container'>
    <h5>Question:</h5>
    <div class='display'>
        <h3 class='question'>{{questiontext}}</h3>
    </div>
    <div class='edit'>
        <textarea class='input-xlarge question' type='text' rows='3'>{{questiontext}}</textarea>
    </div>
    <h5>Feedback:</h5>
    <div class='display'>
        <p>{{feedback}}</p>
    </div>
    <div class='edit'>
        <textarea class='input-xlarge question' type='text' rows='3'>{{feedback}}</textarea>
    </div>
    <div class='row-fluid answerlist'>
        <div class='row-fluid'>
            <div class='span10'>
                <h5>Answer Text</h5>
            </div>
            <div class='span1'>
                <h5>Delete?</h5>
            </div>
            <div class='span1'>
                <h5>Correct?</h5>
            </div>
        </div>
        {{#each answers}}
        <div class='row-fluid answer'>
            <div class='span10'>
                <div class='text display'>
                    <p>{{text}}</p>
                </div>
                <div class='text edit'>
                    <input class='answer' type='text' value='{{text}}'></input>
                </div>
                <h6 class='inline'>Question Feedback?</h6><input type='checkbox' {{#if feedback}}checked='yes'{{/if}}value='answerfeedback'></input>
                <div class='text display{{#if feedback}} hidden{{/if}}'>
                    <p>{{feedback}}</p>
                </div>
                <div class='text edit {{#if feedback}} hidden{{/if}}'>
                    <input class='answer' type='text' value='{{feedback}}'></input>
                </div>
            </div>
            <div class='span1 middlealign'>
                <button class='btn btn-danger trash'>
                    <i class='icon-trash icon-white'></i>
                </button>
            </div>
            <div class='span1 middlealign'>
                <input type='checkbox' value='correct'></input>
            </div>
        </div>
        {{/each}}
    </div>
    <button class='btn btn-primary addanswer'>Add Answer</button>
    
</div>
    
</script>


<script id="probe_response" type="text/x-handlebars-template">
    
    <div class='header'>
        <h3>{{status}}</h3>
        {{#if feedback}}<button class='btn btn-large btn-primary' id='feedbut'>View Feedback</button>{{/if}}
        <button class='btn btn-large btn-success nextquestion'>Next Question</button>
    </div>
    {{#if feedback}}
    <div id='feedback'>
            <p>{{feedback}}</p>
    </div>
    {{/if}}
    
</script>

<script id="probe_list" type="text/x-handlebars-template">
    
    <h2>Probes</h2>
    <ul>
        {{#each collection/models }}
            <li>{{ attributes/questiontext }}</a></li>
        {{/each }}
    </ul>

    <span class="edit"><button class="add-button btn success">Add Probe</button></span>
    
</script>